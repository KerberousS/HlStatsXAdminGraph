<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="databaseConfigWindow" fx:controller="javafx.DatabaseConfigurationWindowController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="grid">
    <padding><Insets top="25" right="25" bottom="10" left="25" /></padding>

    <Label text="Database URL:"
           GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id="databaseUrlTextField"
               GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2" />

    <Label text="Username:"
           GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <TextField fx:id="usernameTextField"
               GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <Label text="Password:"
           GridPane.columnIndex="2" GridPane.rowIndex="3" />

    <TextField fx:id="passwordTextField"
               GridPane.columnIndex="2" GridPane.rowIndex="4" />

    <HBox spacing="10" alignment="bottom_left" fx:id="cancelButton"
          GridPane.columnIndex="0" GridPane.rowIndex="5">
        <Button text="Cancel"
                onAction="#handleCancelButton" />
    </HBox>

    <HBox spacing="10" alignment="bottom_left" fx:id="updateConfiguration"
          GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button text="Update Configuration"
                onAction="#handleUpdateConfigButton" />
    </HBox>

    <Text fx:id="updateStatus"
          GridPane.columnIndex="0" GridPane.rowIndex="6" />

    <stylesheets>
        <URL value="@basewindow.css" />
    </stylesheets>

</GridPane>
