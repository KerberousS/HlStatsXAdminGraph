<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="basewindow" fx:controller="javafx.BaseWindowController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="grid">
    <padding><Insets top="25" right="25" bottom="10" left="25" /></padding>

    <Text id="title" text="Welcome to HlStatsX Admin Graph Tool"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Text fx:id="databaseStatus"
          GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <HBox spacing="10" alignment="bottom_left"
          GridPane.columnIndex="2" GridPane.rowIndex="1">
        <Button text="Configure Database"
                onAction="#handleConfigureDatabaseButton" />
    </HBox>

    <Label text="Select server:"
           GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <ComboBox fx:id="serverDropdown"
               GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <HBox spacing="10" alignment="bottom_left"
          GridPane.columnIndex="2" GridPane.rowIndex="2">
        <Button text="Manage Servers"
                onAction="#handleManageServerButton" />
    </HBox>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button text="Choose this server"
                onAction="#handleChooseServerButton" />
    </HBox>

    <Text fx:id="updateStatus"
          GridPane.columnIndex="0" GridPane.rowIndex="5" />

    <stylesheets>
        <URL value="@basewindow.css" />
    </stylesheets>

</GridPane>
