<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="adminsWindow" fx:controller="javaFX.AdminsWindowController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="grid">
    <padding><Insets top="25" right="25" bottom="10" left="25" /></padding>

    <ListView fx:id="adminsList"
              GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <HBox spacing="10" alignment="bottom_left"
          GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Button text="Manage Admins"
                onAction="#handleManageAdminsButton" />
    </HBox>

    <Label text="Choose option:"
           GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <HBox spacing="10" alignment="bottom_left"
          GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Button text="Generate Chart"
                onAction="#handleGenerateSimpleSumChartButton" />
    </HBox>

    <HBox spacing="10" alignment="bottom_left" fx:id="closeButton"
          GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Button text="Go back"
                onAction="#handleCloseButton" />
    </HBox>

    <stylesheets>
        <URL value="@../basewindow.css" />
    </stylesheets>

</GridPane>
